{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "*": ["../node_modules/*", "./types/*"]
    }
  },
  "include": ["src/**/*"]
}
